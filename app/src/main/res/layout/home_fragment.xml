<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_activity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



    <!-- 广告轮播banner -->  <!-- 四个菜单按钮 -->
    <View style="@style/separator_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:scaleType="fitXY"
            android:src="@drawable/bottom_left"/>

    </LinearLayout>
    <include layout="@layout/home_menu_navigation_slice2"/>

    <!-- 广告专题 -->
    <!--<include layout="@layout/separator_line_margin_slice"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dip"
        android:orientation="vertical"
        android:background="@color/bg_activity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:scaleType="fitXY"
                android:src="@drawable/up_left"/>
            <View style="@style/separator_line_vertical"/>
            <LinearLayout
                android:layout_weight="1.0"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1.0"
                    android:scaleType="fitXY"
                    android:src="@drawable/up_right_top"/>
                <View style="@style/separator_line"/>
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1.0"
                    android:scaleType="fitXY"
                    android:src="@drawable/up_right_bottom"/>
            </LinearLayout>
        </LinearLayout>
        <View style="@style/separator_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img5"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_left"/>
            <View style="@style/separator_line_vertical"/>
            <ImageView
                android:id="@+id/img6"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_right"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img7"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:scaleType="fitXY"
            android:src="@drawable/up_left"/>
        <View style="@style/separator_line_vertical"/>
        <LinearLayout
            android:layout_weight="1.0"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img8"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1.0"
                android:scaleType="fitXY"
                android:src="@drawable/up_right_top"/>
            <View style="@style/separator_line"/>
            <ImageView
                android:id="@+id/img9"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1.0"
                android:scaleType="fitXY"
                android:src="@drawable/up_right_bottom"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/separator_line_margin_slice"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>