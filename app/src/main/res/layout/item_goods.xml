<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">
    android:background="@color/bg_activity">

    <RelativeLayout
        android:id="@+id/goodsInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/goodsImg"
            android:scaleType="fitXY"
            android:src="@drawable/bottom_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:alpha="0.8"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/defaultTextColor"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:paddingLeft="10dp"
                android:textSize="13sp"
                android:gravity="left|center"
                android:id="@+id/goodsNameTxt"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="13sp"
                android:numeric="integer"
                android:gravity="center|right"
                android:id="@+id/goodsPriTxt"
                android:textColorHint="@color/red"
                android:hint="请输入商品价格"
                android:textColor="@color/red"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/conLayout"
        android:background="@color/black_btn_stroke_color_disable"
        android:layout_below="@+id/goodsInfoLayout"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:id="@+id/conTxt"
            android:maxLength="60"
            android:maxLines="2"
            android:text="请问请问"
            android:textSize="13sp"
            android:hint="请输入商品描述"
            android:background="@color/white"
            android:layout_margin="0.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/conLayout"
        android:background="@color/black_btn_stroke_color_disable"
        android:layout_width="match_parent"
        android:layout_height="0.3dp" />


</RelativeLayout>