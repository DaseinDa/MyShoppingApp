<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_activity">
    <include
        android:id="@+id/titleLayout"
        layout="@layout/layout_title"/>
     <RelativeLayout
         android:orientation="vertical"
         android:layout_below="@+id/titleLayout"
         android:id="@+id/ll"
         android:layout_width="match_parent"
         android:layout_height="280dp">
         <RelativeLayout

             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:id="@+id/goodsInfoLayout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <GridView
                android:id="@+id/gridview"
                android:numColumns="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></GridView>
             <TextView
                 android:id="@+id/conTxt"
                 android:gravity="center|left"
                 android:layout_below="@+id/img"
                 android:layout_width="match_parent"
                 android:layout_height="80dp" />

         </RelativeLayout>
         <View
             android:id="@+id/line"
             android:layout_below="@+id/goodsInfoLayout"
             style="@style/separator_line"/>
         <RelativeLayout

             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:layout_below="@+id/line"
             android:id="@+id/userLayout"
             android:layout_width="match_parent"
             android:layout_height="40dp">
             <ImageView
                 android:id="@+id/headImg"
                 android:layout_marginLeft="10dp"
                 android:layout_width="40dp"
                 android:layout_height="40dp" />
             <TextView
                 android:gravity="left|center"
                 android:id="@+id/userTxt"
                 android:layout_toRightOf="@+id/headImg"
                 android:textSize="13sp"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent" />
             <TextView
                 android:gravity="right|center"
                 android:id="@+id/timeTxt"
                 android:layout_alignParentRight="true"
                 android:textSize="12sp"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent" />

         </RelativeLayout>

         <LinearLayout
             android:layout_marginBottom="5dp"
             android:layout_below="@+id/userLayout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <View
                 style="@style/separator_line"/>
             <View
                 style="@style/separator_line"/>
             <View
                 style="@style/separator_line"/>
         </LinearLayout>



     </RelativeLayout>
    <ListView
        android:divider="@null"
        android:id="@+id/listview"
        android:layout_above="@+id/lll"
        android:layout_below="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

    <RelativeLayout
        android:id="@+id/lll"
        android:layout_alignParentBottom="true"
        android:background="#444444"
        android:layout_width="match_parent"
        android:layout_height="40dp">
    <RelativeLayout
        android:background="@color/white"
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/comEdt"
            android:paddingLeft="3dp"
            android:gravity="center|left"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_marginRight="70dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="65dp"
            android:layout_alignParentRight="true"
            android:background="#444444"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/yesTxt"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="评论"
            android:layout_margin="1dp"
            android:layout_width="60dp"
            android:layout_height="match_parent" />
    </RelativeLayout>]
    </RelativeLayout>
</RelativeLayout>